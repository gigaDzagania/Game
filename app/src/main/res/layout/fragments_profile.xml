<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1D0150"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select players"
        android:textSize="35dp"
        android:textColor="#ADB31EE9"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player  X"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#E1C5C5C5"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Player  O"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#E1C5C5C5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_marginTop="35sp"
            android:backgroundTint="#FBAC0D"
            android:text="Start Game"
            android:textColor="#F3AC00CA"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/passwordChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="password Change"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/logOut"
        tools:layout_editor_absoluteX="8dp"
        android:backgroundTint="#3F51B5"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="sign out"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#CC0000"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
