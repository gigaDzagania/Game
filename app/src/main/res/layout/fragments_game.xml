<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#051050"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tic Tac Toe Game"
        android:textColor="#F6DE00"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/turnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn  X"
        android:textSize="25sp"
        android:textColor="#00FF48"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textSize="20dp"
                android:textColor="#00E2FF"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textSize="20dp"
                android:textColor="#FF9800"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="20dp"
                android:textColor="#D3C0C7"
                android:layout_margin="2dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="20dp"
                android:textColor="#D3C0C7"
                android:layout_margin="2dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/pointX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#00E109"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/pointO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#00E109"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#43E91E"
            android:textSize="26sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button4"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button7"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:backgroundTint="@color/white"/>

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:textSize="11sp"
            android:backgroundTint="#2B47E3"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="18sp"
            android:backgroundTint="#E11C1C"
            android:layout_margin="10dp"
            android:layout_weight="0.8"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/winsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins ðŸ‘‘"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:backgroundTint="#009688"
            android:textStyle="bold"/>

    </LinearLayout>

</TableLayout>
